<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluenav"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppBaseTheme"
    tools:context="com.example.hotelreseration.MainScreenActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/ChangeSurname"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ChangeName"
        android:layout_alignBottom="@+id/ChangeName"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center"
        android:hint="Surname"
        android:inputType="textPersonName"
        android:text="Epwnymo"
        android:textColor="#000070"
        android:textColorHint="#c1bdbd"
        android:textStyle="bold"
        android:textSize="23sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/ChangeName"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:freezesText="true"
        android:gravity="center"
        android:hint="Name"
        android:inputType="textPersonName"
        android:text="Onoma"
        android:textColor="#000070"
        android:textColorHint="#c1bdbd"
        android:textStyle="bold"
        android:textSize="23sp"
        tools:ignore="Deprecated,HardcodedText" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/ChangeSurname"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:src="@drawable/addpic"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/todaysdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ChangeName"
        android:layout_below="@+id/userImage"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/more_info"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/ChangeTelephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userImage"
        android:layout_below="@+id/todaysdate"
        android:layout_marginTop="18dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Telephone"
        android:inputType="phone"
        android:text="Thlefwno"
        android:textColor="#000090"
        android:textColorHint="#c1bdbd"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <View
        android:id="@+id/View01"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/todaysdate"
        android:background="@android:color/darker_gray"
        android:visibility="visible"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/ChangeMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ChangeTelephone"
        android:layout_below="@+id/ChangeTelephone"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:text="Email"
        android:textColor="#000090"
        android:textColorHint="#c1bdbd"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/ChangeCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ChangeMail"
        android:layout_below="@+id/ChangeMail"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Country"
        android:inputType="textPersonName"
        android:text="Xwra"
        android:textColor="#000090"
        android:textColorHint="#c1bdbd"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/pickeddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ChangeTelephone"
        android:layout_alignBottom="@+id/ChangeTelephone"
        android:layout_alignLeft="@+id/View01"
        android:text="Telephone:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#303030"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/descending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ChangeMail"
        android:layout_alignBottom="@+id/ChangeMail"
        android:layout_alignLeft="@+id/pickeddate"
        android:text="E-mail:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#303030"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ChangeCountry"
        android:layout_alignBottom="@+id/ChangeCountry"
        android:layout_alignLeft="@+id/descending"
        android:text="Country:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#303030"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/results"
        android:layout_below="@+id/ChangeCountry"
        android:layout_marginTop="16dp"
        android:text="Gender:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#303030"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        style="@android:style/Holo.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ChangeCountry"
        android:layout_below="@+id/ChangeCountry"
        android:gravity="bottom"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Male"
            android:textColor="#000090"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="#000090"
            tools:ignore="HardcodedText" />
    </RadioGroup>

</RelativeLayout>