<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluenav" >

    <TextView
        android:id="@+id/BookedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:text="@string/Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/BookedText"
        android:background="#000000"
        android:visibility="visible"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/changeinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@+id/userImage"
        android:text="Change Your Info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/deleteaccount"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/deleteaccount"
        android:layout_marginLeft="18dp"
        android:src="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/changeinfo"
        android:layout_alignLeft="@+id/userImage"
        android:layout_alignTop="@+id/changeinfo"
        android:src="@android:drawable/ic_lock_lock" />

    <TextView
        android:id="@+id/deleteaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/changeinfo"
        android:layout_below="@+id/changeinfo"
        android:layout_marginTop="18dp"
        android:text="Delete Account"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/View01"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/changeinfo"
        android:layout_alignRight="@+id/changeinfo"
        android:layout_below="@+id/changeinfo"
        android:background="#000000"
        android:visibility="visible"
        tools:ignore="RtlHardcoded" />

    <View
        android:id="@+id/View02"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/userImage"
        android:layout_alignLeft="@+id/deleteaccount"
        android:layout_alignRight="@+id/deleteaccount"
        android:background="#000000"
        android:visibility="visible"
        tools:ignore="RtlHardcoded" />

    <View
        android:id="@+id/View03"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/edithotels"
        android:layout_alignRight="@+id/edithotels"
        android:layout_below="@+id/edithotels"
        android:background="#000000"
        android:visibility="visible"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/edithotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/deleteaccount"
        android:layout_below="@+id/deleteaccount"
        android:layout_marginTop="19dp"
        android:text="Edit Hotels"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/hotelimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edithotels"
        android:layout_alignLeft="@+id/userImage"
        android:layout_alignRight="@+id/userImage"
        android:layout_alignTop="@+id/edithotels"
        android:src="@drawable/action_hotels" />

</RelativeLayout>